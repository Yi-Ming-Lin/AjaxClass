@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div id="div1"></div>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
@section Scripts{
    <script>

        const emp = {
            "employees": [
                { "name": "Tom", "workYears": 3, "salary": 35000 },
                { "name": "Jack", "workYears": 5, "salary": 40000 },
                { "name": "Mary", "workYears": 7, "salary": 45000 }
            ]
        };
        for(var i=0;i<emp.employees.length;i++){
            const { name, workYears, salary } = emp.employees[i];
            var c = document.createElement("p");
            
            c.innerHTML = name + "/"+workYears + "/" + salary;
            $("#div1").append(c);
        }

        emp.employees.forEach((val,index,array)=>{
            $("#div1").append(`<p>${val.name}/${val.salary}</p>`)
        })
    </script>
}
